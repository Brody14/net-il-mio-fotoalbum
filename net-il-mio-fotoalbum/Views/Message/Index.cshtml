@{
    Layout = "_Layout";
}

@model List<Message>

<ul class="nav justify-content-end p-4">
    <li class="nav-item">
        <a class="nav-link text-reset" href="@Url.Action("Index", "Photo")">Foto</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-reset" href="@Url.Action("Index", "Category")">Categorie</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active text-reset" href="@Url.Action("Index", "Message")">Messaggi</a>
    </li>
</ul>

@if (Model.Count() == 0)
{
    <div class="container text-center p-3">
        <h3>Non ci sono messaggi da mostrare...</h3>
    </div>
}


<div class="container my-2">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Messaggi ricevuti</h1>
        </div>
       
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-5">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Mittente</th>
                        <th scope="col">Titolo</th>
                        <th scope="col">Testo</th>
                        <th scope="col">Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Message mess in Model)
                    {
                        <tr>
                            <td>@mess.Email</td>
                            <td>@mess.Title</td>
                            <td>@mess.Text</td>
                            <td class="text-center">

                                <form asp-controller="Message" asp-action="Delete" asp-route-id="@mess.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>