@{
    Layout = "_Layout";
}

@model List<Photo>

    @if (User.IsInRole("ADMIN"))
    {
        <div class="container p-3 d-flex justify-content-end">
            <a class="text-reset" href="@Url.Action("Create", "Photo")">
                <i class="fa-solid fa-plus"></i>
            </a>
        </div>
    }

    @if (Model.Count() == 0)
    {
        <div class="container text-center p-3">
            <h3>Non ci sono foto da mostrare...</h3>
        </div>
    }


    <div class="container">
        <div class="row">
            <div class="col-12">

                <h1 class="mb-5">Le tue foto</h1>

            </div>
        </div>
    </div>



