@{
    Layout = "_Layout";
}


@model PhotoFormModel

<div class="container p-5">

    <h2 class="mb-4">Aggiungi una foto</h2>

    <form asp-controller="Photo" asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" placeholder="Inserisci il titolo della foto" asp-for="Photo.Title">
            <span asp-validation-for="Photo.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Descrizione</label>
            <textarea class="form-control" id="description" placeholder="Inserisci la descrizione della foto" asp-for="Photo.Description"></textarea>
            <span asp-validation-for="Photo.Description" class="text-danger"></span>
        </div>

       @*  <div class="mb-3">

            <input class="form-check-input" type="checkbox" name="visibility" id="visibility" asp-for="Photo.Visibility">
            <label class="form-check-label" for="visibility" asp-for="Photo.Visibility">
                Pubblico
            </label>

            <input class="form-check-input" type="checkbox" name="visibility" id="visibility" asp-for="Photo.Visibility">
            <label class="form-check-label" for="visibility" asp-for="Photo.Visibility">
                Privato
            </label>

        </div> *@

        <div class="mb-3">
            <label class="form-label" for="categories">Categorie</label>
            <select asp-for="SelectedCategoriesId"
                    multiple="multiple"
                    size="5"
                    class="form-control mb-2 mr-sm-2 ml-sm-3 leftList"
                    asp-items="@Model.Categories">
            </select>
        </div>

        <div class="mb-4">
            <label asp-for="ImageFormFile">Foto</label>
            <div class="mb-2">
                <input type="file" asp-for="ImageFormFile" />
                <span asp-validation-for="ImageFormFile" class="text-error"></span>
            </div>
        </div>

        <div class="d-flex align-items-center gap-3">
            <button type="submit" class="btn">Aggiungi</button>
            <a href="@Url.Action("Index", "Photo")" class="btn">Indetro</a>
        </div>
    </form>

</div>